{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "properties": {
    "slug": {
      "type": "string",
      "minLength": 1,
      "description": "A unique URL-friendly identifier for your course. Example: `redis`."
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "The name of your course. Example: `Build your own Redis`."
    },
    "short_name": {
      "type": "string",
      "minLength": 1,
      "description": "A short name for your course. Example: `Redis`."
    },
    "release_status": {
      "type": "string",
      "minLength": 1,
      "description": "The release status of your course. Accepted values: `alpha`, `beta`, `live`."
    },
    "description_md": {
      "type": "string",
      "minLength": 1,
      "description": "A markdown description for your course. 25-50 words."
    },
    "short_description_md": {
      "type": "string",
      "minLength": 1,
      "description": "A short description of your course, < 15 words."
    },
    "completion_percentage": {
      "type": "integer",
      "not": { "type": "null" },
      "description": "The percentage of users who complete this course. Set to 5% if we don't have data yet."
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slug": { "type": "string", "minLength": 1 },
          "starter_repository_url": { "type": "string", "minLength": 1 }
        },
        "required": ["slug", "starter_repository_url"]
      }
    },
    "marketing": {
      "type": "object",
      "properties": {
        "difficulty": { "type": "string", "minLength": 1 },
        "sample_extension_idea_title": { "type": "string", "minLength": 1 },
        "sample_extension_idea_description": {
          "type": "string",
          "minLength": 1
        },
        "testimonials": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "author_name": { "type": "string", "minLength": 1 },
              "author_description": { "type": "string", "minLength": 1 },
              "author_avatar": { "type": "string", "minLength": 1 },
              "link": { "type": "string", "minLength": 1 },
              "text": { "type": "string", "minLength": 1 }
            },
            "required": [
              "author_name",
              "author_description",
              "author_avatar",
              "link",
              "text"
            ]
          }
        }
      },
      "required": ["difficulty", "testimonials"]
    },
    "stages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slug": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "description_md": { "type": "string", "minLength": 1 },
          "difficulty": { "type": "string", "minLength": 1 },
          "marketing_md": { "type": "string", "minLength": 1 },
          "tester_source_code_url": { "type": "string", "minLength": 1 }
        },
        "required": [
          "slug",
          "name",
          "description_md",
          "difficulty",
          "marketing_md"
        ]
      }
    }
  },
  "required": [
    "slug",
    "name",
    "short_name",
    "release_status",
    "description_md",
    "short_description_md",
    "completion_percentage",
    "languages",
    "marketing",
    "stages"
  ]
}
